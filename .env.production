# Production Environment Variables
# IMPORTANT: Change all values before deploying to production!

# Django Settings
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING-IN-PRODUCTION
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# Database Settings (PostgreSQL required for production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=netvillage_production
DB_USER=netvillage_user
DB_PASSWORD=CHANGE-THIS-SECURE-PASSWORD
DB_HOST=db
DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Kaspi Payment Settings
KASPI_API_KEY=your-production-kaspi-api-key
KASPI_MERCHANT_ID=your-production-merchant-id
KASPI_WEBHOOK_SECRET=your-production-webhook-secret

# Email Settings (for notifications)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password

# Static and Media Files
STATIC_ROOT=staticfiles
MEDIA_ROOT=media
